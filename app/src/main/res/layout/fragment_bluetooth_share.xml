<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gr16.android.heavensgps.activities.bluetoothShare.BluetoothShareFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/label_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Not Connected"
            tools:text="Not Connected" />

        <Button
            android:id="@+id/btn_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share"
            tools:text="Share" />

        <Button
            android:id="@+id/btn_find_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find Device"
            tools:text="Find Device" />

        <Button
            android:id="@+id/btn_make_discoverable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make Discoverable"
            tools:text="Make Discoverable" />

        <TextView
            android:id="@+id/label_shared_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shared with you:" />

    </LinearLayout>

</FrameLayout>
